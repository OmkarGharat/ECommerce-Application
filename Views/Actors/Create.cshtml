@model Actor

@{
    ViewData["Title"] = "Add Actor";
}

<div class="col-md-8 offset-2">
    <p>
        <h1 class="text-center">Add a new Actor</h1>
    </p>
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" style="border-radius : 50%" />
                </div>

                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control md-1" />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control md-1" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control md-1" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-4">
                    <input type="submit" value="Create" class="btn btn-success float-right" />
                    <a class="btn btn-primary" asp-controller="Actors" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function ()){
            var output = document.getElementById('ProfilePictureURL');
            output.src = $(this).val();
        })

        $("#ProfilePictureURL").on("change", function ()){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        }
    </script>
}